@using ServiceContacts.DTOs.PersonDto
@using ServiceContacts.Enums
@model IEnumerable<PersonResponse>

@{
    ViewBag.Title = "Persons List";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Persons</h2>
        <a asp-controller="Persons" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create Person
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-controller="Persons" asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Search By</label>
                    <select name="searchBy" class="form-select">
                        @foreach (var field in ViewBag.SearchFields)
                        {
                            if (field.Key == ViewBag.CurrentSearchBy)
                            {
                                <option value="@field.Key" selected="selected">@field.Value</option>
                            }
                            else
                            {
                                <option value="@field.Key">@field.Value</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Search Phrase</label>
                    <input type="search" name="searchPhrase" value="@ViewBag.CurrentSearchPhrase"
                           placeholder="Enter keyword..." class="form-control" />
                </div>

                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-50">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-controller="Persons" asp-action="Index" class="btn btn-outline-secondary w-50">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Persons Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    @Html.ActionLink("Name", "Index", new {
                                        searchBy = ViewBag.CurrentSearchBy,
                                        searchPhrase = ViewBag.CurrentSearchPhrase,
                                        sortBy = "Name",
                                        sortDirection = (ViewBag.CurrentSortBy == "Name" && ViewBag.CurrentSortDirection == SortDirectionOptions.ASC ? SortDirectionOptions.DESC : SortDirectionOptions.ASC)
                                    })
                                    @if (ViewBag.CurrentSortBy == "Name")
                                    {
                                        <span class="ms-1 text-primary">@((ViewBag.CurrentSortDirection == SortDirectionOptions.ASC) ? "▲" : "▼")</span>
                                    }
                                </th>
                                <th>Email</th>
                                <th>
                                    @Html.ActionLink("Date of Birth", "Index", new {
                                        searchBy = ViewBag.CurrentSearchBy,
                                        searchPhrase = ViewBag.CurrentSearchPhrase,
                                        sortBy = "DateOfBirth",
                                        sortDirection = (ViewBag.CurrentSortBy == "DateOfBirth" && ViewBag.CurrentSortDirection == SortDirectionOptions.ASC ? SortDirectionOptions.DESC : SortDirectionOptions.ASC)
                                    })
                                    @if (ViewBag.CurrentSortBy == "DateOfBirth")
                                    {
                                        <span class="ms-1 text-primary">@((ViewBag.CurrentSortDirection == SortDirectionOptions.ASC) ? "▲" : "▼")</span>
                                    }
                                </th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Country</th>
                                <th>Newsletter</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var person in Model)
                            {
                                <tr>
                                    <td>@person.Name</td>
                                    <td>@person.Email</td>
                                    <td>@person.DateOfBirth?.ToString("dd MMM yyyy")</td>
                                    <td>@person.Age</td>
                                    <td>@person.Gender</td>
                                    <td>@person.Country</td>
                                    <td>
                                        @if (person.ReceiveNewsletter == true)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Persons" asp-action="Update" asp-route-id="@person.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-controller="Persons" asp-action="Delete" asp-route-id="@person.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this person?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-emoji-frown fs-3"></i>
                    <p class="mt-2 mb-0">No persons found.</p>
                </div>
            }
        </div>
    </div>
</div>
